# .env

# Server Port
PORT=3001

# JWT Secrets (Generate strong random strings for production)
ACCESS_TOKEN_SECRET="your_very_strong_access_token_secret_here"
REFRESH_TOKEN_SECRET="your_very_strong_refresh_token_secret_here"

# JWT Expiration Times
ACCESS_TOKEN_EXPIRATION="15m"
REFRESH_TOKEN_EXPIRATION="7d"

# Cookie Settings
REFRESH_TOKEN_COOKIE_NAME="refreshToken"
REFRESH_TOKEN_COOKIE_MAX_AGE=604800000 # 7 days in milliseconds (7 * 24 * 60 * 60 * 1000)

# CORS Origin (Adjust for your frontend URL in production)
CORS_ORIGIN="*" # Allow all for testing, restrict in production

